<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SSUSUAI" parent="Theme.Material3.Dark">
        <item name="actionBarTheme">@style/Theme.SSUSUAI.ActionBarStyle</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/d_main_accent</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >#0F0F0F</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:fontFamily">@font/golos_regular</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SSUSUAI.ActionBarStyle" parent="ThemeOverlay.Material3.Dark.ActionBar">
        <item name="android:titleTextStyle">@style/Theme.SSUSUAI.ActionBar.TitleTextStyle</item>
        <item name="android:background">#0F0F0F</item>
        <item name="android:elevation">0dp</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="Theme.SSUSUAI.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btnv_back">
        <item name="backgroundTint">@color/d_btnv</item>
        <item name="android:background">@color/d_btnv</item>
    </style>

    <style name="cardNew">
        <item name="cardBackgroundColor">#2B2C34</item>
    </style>

    <style name="StandardBackground">
        <item name="android:background">#0F0F0F</item>
    </style>
</resources>