<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SSUSUAI" parent="Theme.Material3.Light">
        <item name="actionBarTheme">@style/Theme.SSUSUAI.ActionBarStyle</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#7370FB</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:fontFamily">@font/centurygothic_bold</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.SSUSUAI.ActionBarStyle">
        <item name="android:background">@color/main_color</item>
        <item name="android:elevation">0dp</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="CardBackground" parent="Widget.Material3.CardView.Elevated">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="StandardBackground">
        <item name="android:background">@color/main_color</item>
    </style>

    <style name="standardText.calendar_text">
        <item name="android:textColor">#BCC1CD</item>
    </style>

    <style name="standardTextBold.textNoEvents">
        <item name="android:textColor">#BFBFBF</item>
    </style>

    <style name="standardText.text_in_card_in_calendar">
        <item name="android:textColor">#212525</item>
    </style>

    <style name="backgroundCardEvent">
        <item name="android:backgroundTint">@color/light_green_card</item>
    </style>

    <style name="textInCard">
        <item name="android:textColor">#212525</item>
    </style>

    <style name="standardTextBold.start_time_and_and_text_in_card_in_calendar">
        <item name="android:textColor">#212525</item>
    </style>

    <style name="btnv_back">
        <item name="android:background">@color/white</item>
    </style>

    <style name="button">
        <item name="backgroundTint">#346AFC</item>
    </style>

    <style name="iconNew">
        <item name="tint">#9FADCA</item>
    </style>

    <style name="iconText">
        <item name="android:textColor">#9FADCA</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="cardNew">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

</resources>