<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SSUSUAI" parent="Theme.Material3.DayNight">
        <item name="actionBarTheme">@style/MyActionBar</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#7370FB</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:fontFamily">@font/centurygothic_bold</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_standard</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="MyActionBar">
        <item name="android:background">@drawable/background_standard</item>
        <item name="android:elevation">0dp</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="CardBackground">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="StandardBackground">
        <item name="android:background">@color/background_standard</item>
    </style>

</resources>